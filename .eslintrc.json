{
  "extends": "standard",
  "plugins": [
    "standard",
    "promise"
  ],
  "env": {
    "node": true
  },
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "semi": ["error", "always"],
    "semi-spacing": "error",
    "comma-style": ["error", "last"],
    "indent": ["error", 2],
    "no-undef": "warn",
    "no-unused-vars": "warn"
  }
}